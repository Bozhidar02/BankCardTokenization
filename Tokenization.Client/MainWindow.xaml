<Window x:Class="Tokenization.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tokenization Client"
        Height="500"
        Width="400"
        MinHeight="450">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- LOGIN -->
        <GroupBox Header="Login" Padding="10">
            <StackPanel>
                <Label Content="Username"/>
                <TextBox x:Name="txtUsername"/>

                <Label Content="Password" Margin="0,5,0,0"/>
                <PasswordBox x:Name="txtPassword"/>

                <Button Content="Login"
                        Margin="0,10,0,0"
                        Click="BtnLogin_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- OPERATIONS -->
        <GroupBox Header="Operations"
                  Grid.Row="1"
                  Margin="0,10,0,0"
                  Padding="10">
            <StackPanel>

                <Label Content="Bank card number (16 digits)"/>
                <TextBox x:Name="txtCardNumber"/>

                <Button x:Name="btnRegister"
                        Content="Register Token"
                        Margin="0,5,0,10"
                        IsEnabled="False"
                        Click="BtnRegister_Click"/>

                <Label Content="Token"/>
                <TextBox x:Name="txtToken"/>

                <Button x:Name="btnResolve"
                        Content="Resolve Token"
                        Margin="0,5,0,0"
                        IsEnabled="False"
                        Click="BtnResolve_Click"/>

            </StackPanel>
        </GroupBox>

        <!-- RESULT -->
        <TextBox x:Name="txtResult"
                 Grid.Row="2"
                 Margin="0,10,0,0"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"/>
    </Grid>
</Window>

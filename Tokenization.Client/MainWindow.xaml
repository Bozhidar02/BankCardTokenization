<Window x:Class="Tokenization.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tokenization Client"
        Height="400"
        Width="400">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Username"/>
        <TextBox x:Name="txtUsername"/>

        <Label Content="Password" Grid.Row="1"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="2"/>

        <Button Content="Login"
            Grid.Row="3"
            Margin="0,10,0,0"
            Click="BtnLogin_Click"/>

        <StackPanel Grid.Row="4" Margin="0,10,0,0">
            <Label Content="Card number / Token"/>
            <TextBox x:Name="txtInput"/>

            <Button Content="Register Token"
                Margin="0,5,0,0"
                Click="BtnRegister_Click"/>

            <Button Content="Resolve Token"
                Margin="0,5,0,0"
                Click="BtnResolve_Click"/>

            <TextBox x:Name="txtResult"
                 Margin="0,10,0,0"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>

</Window>

<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>

	<system.serviceModel>

		<services>
			<service
			  name="Tokenization.Server.TokenizationService"
			  behaviorConfiguration="MetadataBehavior">

				<!-- BASE ADDRESS -->
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8080/TokenizationService" />
					</baseAddresses>
				</host>

				<!-- SOAP endpoint -->
				<endpoint
				  address=""
				  binding="basicHttpBinding"
				  contract="Tokenization.Contracts.ITokenizationService" />

				<!-- WSDL / metadata -->
				<endpoint
				  address="mex"
				  binding="mexHttpBinding"
				  contract="IMetadataExchange" />

			</service>
		</services>

		<behaviors>
			<serviceBehaviors>
				<behavior name="MetadataBehavior">
					<serviceMetadata httpGetEnabled="true" />
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

	</system.serviceModel>

</configuration>
